{
  "version": "1.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/presets/**/*", "packages/templates/**/*"],
  "exact": true,
  "command": {
    "version": {
      "message": "chore(release): %s",
      "allowBranch": ["main", "develop"]
    },
    "publish": {
      "conventionalCommits": true
    }
  }
}
